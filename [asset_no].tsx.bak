        <aside style={{ position: 'sticky', top: 0, alignSelf: 'start', height: '100vh', padding: 16, background: theme === 'light' ? '#FFFFFFAA' : '#0E1A13', backdropFilter: theme === 'light' ? 'blur(6px)' : undefined, borderRight: `1px solid ${colors.border}` }}>
